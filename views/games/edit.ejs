<h1>Edit Game</h1>

<form method="POST" action="/games/<%= game.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="Name" class="form-control" value="<%= game.name %>">
  </div>
  <div class="form-group">
    <label for="releaseDate">Release Date</label>
    <input type="date" name="releaseDate" id="releaseDate" class="form-control" value="<%= game.releaseDate %>">
  </div>
  <div class="form-group">
    <label for="synopsis">Synopsis</label>
    <textarea name="synopsis" id="synopsis" placeholder="Synopsis" class="form-control"><%= game.synopsis %></textarea>
  </div>
  <div class="form-group">
    <label for="genre">Genre</label>
    <select name="genre" id="genre" class="form-control select2">
      <% genres.forEach((genre) => { %>
        <option <% if(game.genre === genre) { %>selected<% } %>><%= genre %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="videos">Video Link</label>
    <input type="text" name="videos" id="videos" placeholder="Videos Link" class="form-control" value="<%= game.wikipedia %>">
  </div>
  <div class="form-group">
    <label>Images</label>
    <input type="text" name="images[]" class="form-control" value="<%= game.images[0] %>">
    <input type="text" name="images[]" class="form-control" value="<%= game.images[1] %>">
    <input type="text" name="images[]" class="form-control" value="<%= game.images[2] %>">
  </div>

  <button class="btn btn-primary">Add</button>
</form>
